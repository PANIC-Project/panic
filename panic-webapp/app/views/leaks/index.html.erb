<% @leaks.each do |leak| %>
  <tr>
    <td><%= leak.address %></td>
    <td><%= leak.name %></td>
    <td><%= link_to 'Show', leak %></td>
    <td><%= link_to 'Edit', edit_leak_path(leak) %></td>
    <td><%= link_to 'Destroy', leak, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

