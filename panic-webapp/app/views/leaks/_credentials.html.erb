<h4>Associated Credentials</h4>

<table class="credentials">
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Email</th>
      <th>Hash</th>
      <th>Controls</th>
    </tr>
  </thead>
  <tbody>
    <% credentials.each do |credential| %>
      <tr>
        <td><%= credential.username %></td>
        <td><%= credential.password %></td>
        <td><%= credential.email %></td>
        <td><%= credential.hash %></td>
        <td>
          <%= link_to image_tag("pencil.png"), edit_credential_path(credential) %>
          <%= link_to image_tag("cross.png"), credential, confirm: 'Are you sure?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
